root = true

[*]
end_of_line = crlf
insert_final_newline = true

[*.{js,ts,svelte}]
charset = utf-8

[*.{ts,js,mjs,mts}]
indent_style = space
indent_size = 4

[*.svelte]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2
