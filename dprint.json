{
    "useTabs": false,

    "typescript": {
        "indentWidth": 4,
        "useTabs": false
    },
    "json": {
        "indentWidth": 4,
        "useTabs": false
    },
    "malva": {
        "hexCase": "lower",

        "printWidth": 99999,

        "preferSingleLine": true,
        "linebreakInPseudoParens": false,

        "indentWidth": 4,
        "useTabs": false
    },
    "markup": {
        "svelteAttrShorthand": true,
        "svelteDirectiveShorthand": true,

        "formatComments": true,
        "preferAttrsSingleLine": true,

        "whitespaceSensitivity": "css",

        "doctypeKeywordCase": "lower",

        "scriptIndent": true,
        "styleIndent": true,

        "indentWidth": 4,
        "useTabs": false
    },
    "yaml": {
        "indentWidth": 2
    },
    "sql": {
        "uppercase": true,
        "linesBetweenQueries": 1,

        "indentWidth": 4,
        "useTabs": false
    },
    "excludes": [
        "**/node_modules",
        "**/*-lock.json"
    ],
    "plugins": [
        "https://plugins.dprint.dev/typescript-0.95.0.wasm",
        "https://plugins.dprint.dev/json-0.20.0.wasm",
        "https://plugins.dprint.dev/g-plane/malva-v0.11.2.wasm",
        "https://plugins.dprint.dev/g-plane/markup_fmt-v0.19.1.wasm",
        "https://plugins.dprint.dev/g-plane/pretty_yaml-v0.5.0.wasm",
        "https://plugins.dprint.dev/sql-0.2.0.wasm"
    ]
}
